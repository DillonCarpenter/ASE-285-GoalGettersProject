<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <link rel="stylesheet" href="styles/global.css" />

  <title>List</title>
</head>

<body>
  <%- include('nav.ejs') %>

    <ul class="list-group no-bullets">
      <% for (var i=0; i < posts.length; i++){ %>
        <li class="list-group-item <%= posts[i].completed ? 'task-completed' : '' %>">
          <div class="task-row">
            <button class="task-circle <%= posts[i].completed ? 'is-complete' : '' %>" data-id="<%= posts[i]._id %>"
              aria-label="Toggle completion">
            </button>

            <div class="task-main">
              <h4 class="task-title <%= posts[i].completed ? 'task-title-complete' : '' %>">
                <a href="/detail/<%= posts[i]._id %>">Title : <%= posts[i].title %></a>

                <span class="cat-badge cat-<%= (posts[i].category || 'personal').toLowerCase().trim() %>">
                  <%= posts[i].category || "Personal" %>
                </span>
              </h4>

              <p>Date : <%= posts[i].date %>
              </p>

              <button class="delete" data-id="<%= posts[i]._id %>">Delete</button>
            </div>
          </div>
        </li>
        <% } %>
    </ul>

    <script>
      document.addEventListener("click", async (e) => {

        if (e.target.classList.contains("task-circle")) {
          const id = e.target.dataset.id;

          try {
            const res = await fetch("/toggle-complete", {
              method: "PATCH",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ _id: id })
            });

            if (!res.ok) throw new Error("Toggle failed");
            const data = await res.json();

            const li = e.target.closest("li");
            const title = li.querySelector(".task-title");

            e.target.classList.toggle("is-complete", data.completed);
            title.classList.toggle("task-title-complete", data.completed);
          } catch (err) {
            console.error(err);
          }
          return;
        }

        if (!e.target.classList.contains("delete")) return;

        const id = e.target.dataset.id;

        try {
          const res = await fetch("/delete", {
            method: "DELETE",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ _id: id })
          });

          if (!res.ok) throw new Error("Request failed");

          // Remove parent <li> with fade-out effect
          const li = e.target.closest("li");
          li.style.transition = "opacity 0.4s";
          li.style.opacity = 0;
          setTimeout(() => li.remove(), 400);

          console.log("killed");
        } catch (err) {
          console.error(err);
        }
      });
    </script>

</body>

</html>